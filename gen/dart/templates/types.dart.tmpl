{{define "types"}}
  //
  // Types
  //

  {{- if .Messages -}}
    {{range .Messages -}}

      {{if .Type | isEnum -}}
        {{$enumName := .Name}}
        enum {{$enumName}} {
        {{- range $i, $field := .Fields}}
          {{- if $i}},{{end}}
          {{$field.Name}}
        {{- end}}
        }
      {{end -}}

      {{- if .Type | isStruct  }}
        class {{.Name}} {
        {{- range .Fields}}
          {{.Type | fieldType}}{{if .Optional}}? {{if . | exportableField -}}{{. | exportedJSONField}}{{end}}{{- end -}}
        {{- end}}
        }
      {{end -}}
    {{end -}}
  {{end -}}

{{end}}
